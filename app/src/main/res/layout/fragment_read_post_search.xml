<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="25dp"
    tools:context=".HomeBarFragment.ReadPostSearchFragment" >


    <ImageView
    android:id="@+id/imagePostReadS"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="3.5"
    android:src="@drawable/logo"/>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="20dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textDatePostS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/Normaltext"/>

    <TextView
        android:id="@+id/textAuthorPostS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textStyle="italic"
        android:gravity="right"
        style="@style/Normaltext" />

    </LinearLayout>

    <View
    android:layout_width="match_parent"
    android:layout_height="3dp"
    android:background="@color/browser_actions_bg_grey" />
    <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="@color/black" />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.4"
    android:layout_marginRight="50dp"
    android:layout_marginLeft="50dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="40dp"
    android:orientation="horizontal">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/Star1S"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:lottie_rawRes="@raw/star"
        app:lottie_autoPlay="false"
        android:visibility="visible"
        app:lottie_loop="false"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/Star2S"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:lottie_rawRes="@raw/star"
        app:lottie_autoPlay="false"
        android:visibility="visible"
        app:lottie_loop="false"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/Star3S"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:lottie_rawRes="@raw/star"
        app:lottie_autoPlay="false"
        android:visibility="visible"
        app:lottie_loop="false"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/Star4S"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:lottie_rawRes="@raw/star"
        app:lottie_autoPlay="false"
        android:visibility="visible"
        app:lottie_loop="false"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/Star5S"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:lottie_rawRes="@raw/star"
        app:lottie_autoPlay="false"
        android:visibility="visible"
        app:lottie_loop="false"/>

    </LinearLayout>

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1.7"
    android:layout_marginBottom="40dp"
    android:layout_marginTop="35dp">

    <TextView
        android:id="@+id/textDescPostReadS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/Normaltext"/>

    </ScrollView>
</LinearLayout>